<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head.ejs') %>

	<body>
		<!-- Header -->
		<%if (locals.user !=undefined) { %>
			<%- include ('./partials/headerLogueado') %>
				<% }else{%>
					<%- include ('./partials/headerDeslogueado')%> <!--hacer un headerDeslogueado-->
						<% } %>

							<!-- /Header -->

							<!-- product detail -->

							<div class="container products-wrapper">
								<div class="d-flex align-items-center">
									<h2 class="products-title">
										<% if (producto && producto.nombreProducto){ %>
											<p>
												<a href="/users/profile/<%= producto.id_usuario %>">@<%= producto.usuarios.usuario.usuario %></a> ha publicado: <strong><%=locals.producto.nombreProducto %></strong>
												<!-- No aparece el nombre del usuario -->
											</p>
											<% }else {%>
												<p>Producto no disponible</p>
												<% } %>
									</h2>
									<!-- //if (locals.user !=undefined) {  -->
										<!-- <% //if(locals.user.id == producto.id_usuario){ %> -->
											<p class="product-detail-description">
											<a href="/products/product-edit/<%= producto.id %>">Editar producto</a>
											</p>
										<!-- <% //}else{%>
											<p class="product-detail-description"></p>

										<% //} %> -->
									
								</div>

								<div class="product-detail">
									<div class="row">
										<article class="col-12 col-lg-8 product-detail-info">
											<img class="product-detail-img" src="/images/<%= producto.fotoProducto %>"
												alt="<%= producto.nombreProducto %>">

											<p class="product-detail-description">
												Descripci√≥n del producto: <%= producto.descripcionProducto %>
											</p>
										</article>
										<div class="col-12 col-lg-4">
											<section class="comments">
												<% for(let i=0; i<comentarios.length; i++) { %>

													<article>
														<img
															src="/images/users/<%= comentarios[i].usuarios.fotoPerfil %>">
														<div class="data">
															<p class="user">
																<strong> <a
																		href="/users/profile/id/<%= comentarios[i].usuarios.id %>">
																		@<%=comentarios[i].usuarios.usuario%>
																			:</a> </strong>
																<%= comentarios[i].texto_comentario %>
															</p>
														</div>
													</article>
													<hr>
													</hr>
													<% } %>

													<% if (locals.user != undefined ) {%>
														<form class="form" action="/products/comentario/id/<%=producto.id%>" method="POST">
															<input class="form-input" type="text"
																name="texto_comentario" value="<%locals.old !== undefined && old.texto_comentario ? old.texto_comentario:""%>"
																placeholder="Agregar comentario">
																<% if (locals.errores && errores.comentarios) { %>
																	<p><%= errores.texto_comentario.msg%> </p>
																<% }%>
															<button type="submit" class="buy-now-button">AGREGAR
																COMENTARIO</button>
														</form>
														<%}else{%>
															<h3>Recorda que debes estar logueado para comentar</h3>
														<%}%>
													

														

											</section>
										</div>

									</div>
								</div>
							</div>

							<!-- /product detail -->

							<!-- footer -->
							<%- include('./partials/footer.ejs') %>
								<!-- /footer -->

	</body>

</html>