<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head.ejs') %>

	<body>
		<!-- Header -->
		<%if (locals.user !=undefined) { %>
			<%- include ('./partials/headerLogueado') %>
				<% }else{%>
					<%- include ('./partials/headerDeslogueado')%>
						<% } %>
							<!-- /Header -->

							<!-- Banner -->
							<div class="banner">
								<img src="/images/banner.png" alt="Banner de ofertas" class="banner">
							</div>
							<!-- /Banner -->

							<!-- Novedades -->
							<div class="container products-wrapper">
								<div class="row">
									<div class="col-12">
										<h2 class="products-title">Novedades</h2>
									</div>
									<!-- Show the "ultimos" products -->
									<% for (let i=0; i < 10; i++ ) { %>
										<div class="col-12 col-sm-6 col-lg-3">
											<section class="product-box">
												<a href="/products/detalle/<%= listaProducto[i].id %>">
													<figure class="product-box_image">
														<img class="imgalt"
															src="./images/<%= listaProducto[i].fotoProducto %>"
															alt="<%= listaProducto[i].nombreProducto %>">
													</figure>
													<article class="product-box_data">
														<h2>
															<%= listaProducto[i].nombreProducto%>
														</h2>
														<p>
															<%= listaProducto[i].descripcionProducto%>
														</p>
														<p> Comentarios:
															<%= listaProducto[i].comentarios.length %>
														</p>
													</article>
												</a>
											</section>
										</div>
										<% } %>
								</div>
							</div>
							<!-- /Novedades -->


							<!-- /MÃ¡s comentados -->

							<!-- footer -->
							<%- include('./partials/footer.ejs') %>
								<!-- /footer -->
	</body>

</html>