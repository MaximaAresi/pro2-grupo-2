<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head.ejs') %>

	<body>
		<!-- Header -->
		<%- include('./partials/header.ejs') %>
			<!-- /Header -->

			<!-- Banner -->
			<div class="banner">
				<img src="/images/banner.png" alt="Banner de ofertas" class="banner">
			</div>
			<!-- /Banner -->

			<!-- Novedades -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Novedades</h2>
					</div>
					<!-- Show the "ultimos" products -->
					<% for (let i=0; i < 4; i++ ) { %>
						<div class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="/products/detalle/">
									<figure class="product-box_image">
										<img src="<%= db.productos[i].fotoProducto %>"
											alt="<%= db.productos[i].nombreProducto %>">
									</figure>
									<article class="product-box_data">
										<h2>
											<%= db.productos[i].nombreProducto%>
										</h2>
										<p>
											<%= db.productos[i].descripcionProducto%>
										</p>
										<p>Comentarios: <%= db.productos[i].comentarios_Producto.length %>
										</p>
									</article>
								</a>
							</section>
						</div>
						<% } %>
				</div>
			</div>
			<!-- /Novedades -->

			<!-- Más comentados -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Más comentados</h2>
					</div>
					<!-- Show the "ultimos" products -->
					<% for (let i=5; i < 9; i++ ) { %>
						<div class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="/products/detalle/">
									<figure class="product-box_image">
										<img src="<%= db.productos[i].fotoProducto %>"
											alt="<%= db.productos[i].nombreProducto %>">
									</figure>
									<article class="product-box_data">
										<h2>
											<%= db.productos[i].nombreProducto%>
										</h2>
										<p>
											<%= db.productos[i].descripcionProducto%>
										</p>
										<p>Comentarios: <%= db.productos[i].comentarios_Producto.length %>
										</p>
									</article>
								</a>
							</section>
						</div>
						<% } %>
				</div>
			</div>
			<!-- /Más comentados -->

			<!-- footer -->
			<%- include('./partials/footer.ejs') %>
				<!-- /footer -->
	</body>
</html>