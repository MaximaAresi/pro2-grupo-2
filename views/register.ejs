<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head.ejs') %>

	<body>
		<!-- Header -->
		<%if (locals.user !=undefined) { %>
			<%- include ('./partials/headerLogueado') %>
				<% }else{%>
					<%- include ('./partials/headerDeslogueado')%> <!--hacer un headerDeslogueado-->
						<% } %>


							<!-- /Header -->

							<!-- Novedades -->
							<div class="container products-wrapper">
								<div class="row">
									<div class="col-12">
										<h2 class="products-title">Registrate</h2>
									</div>
									<!-- Show the "ultimos" products -->
									<h2 class="col-12">

										<form class="formModificado" method="POST" action='/users/register'>

											<label for="usuario">Usuario: <input id="usuario" name="usuario" type="text"
													 value="<%= locals.old !== undefined && old.usuario ? old.usuario : "" %>"/>
											</label>
											<% if (locals.errors && errors.usuario) { %>
												<p class="feedback">
													<% errors.usuario.msg %>
												</p>
												<% } %>

											<label for="contrasenia">Contrase√±a: <input id="contrasenia"
														name="contrasenia" type="password"  value="" />
											</label>
											<% if (locals.errors && errors.contrasenia) { %>
													<p class="feedback">
														<% errors.contrasenia.msg %>
													</p>
												<% } %>

											<label for="mail">E-mail: <input id="mail" name="mail" type="email"
																	value= "<%= locals.old !== undefined && old.mail ? old.mail : "" %>" />
											</label>
											<% if (locals.errors && errors.mail) { %>
													<p class="feedback">
															<% errors.mail.msg %>
													</p>
												<% } %>

											<label for="dni">DNI: <input id="dni" name="dni" type="text" maxlength="9"
																value="<%= locals.old !== undefined && old.dni ? old.dni : "" %>"/>
											</label>
											
											<label for="fdn">Fecha de Nacimiento: <input id="fecha" name="fecha" type="date" max="2024-06-01"  
																			value="<%= locals.old !== undefined && old.fecha ? old.fecha : "" %>"/>
											</label>

											<label for="fdp">Foto de Perfil: <input id="fotoPerfil" name="fotoPerfil" type="file"
															value="<%= locals.old !== undefined && old.fotoPerfil ? old.fotoPerfil : "" %>" />
											</label>
											
											<input type="submit" value="Submit" />


										</form>

									</h2>
											<!-- footer -->
											<%- include('./partials/footer.ejs') %>
												<!-- /footer -->
										</div>
									</div>

	</body>

</html>