							<!-- <%// if (locals.errors && errors.email) { %>
								<p class="feedback"><% //errors.email.msg %></p>
							<% //} %> -->

							<label for="dni">DNI: <input id="dni" name="dni" type="text" required /></label>
							<label for="fdn">Fecha de Nacimiento: <input id="fdn" name="fdn" type="date" required /></label>
							<label for="fdp">Foto de Perfil: <input id="fdp" name="fdp" type="file" /></label>
							
							<!-- Mensaje de error  -->



							<input type="submit" value="Submit" />

						</form>

					</h2>


					<!-- footer -->
					<%- include('./partials/footer.ejs') %>
